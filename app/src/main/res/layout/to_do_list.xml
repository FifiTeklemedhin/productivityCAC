<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teal_purple_gradient"
    android:orientation="vertical">

    <Button
        android:id="@+id/to_do_backbutton"
        android:layout_width="63dp"
        android:layout_height="33dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:onClick="backToListOfLists"
        android:text="Back"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/todolist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Homework To Do List"

        android:textSize="40sp"
        app:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_weight="1"
        android:text="Total Time To Complete List: " />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=" Task name                                           Estimated time to complete"
        android:textSize="14sp" />

    <TableLayout
        android:layout_width="393dp"
        android:layout_height="437dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task1"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:text="Physics Lab"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task1Time"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task2"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Chemistry Assignment"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task2Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task3"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Grapes of Wrath Essay"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task3Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="45"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task4"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Duolingo Lesson"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task4Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task5"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Psychology Outline"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task5Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task6"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Math Set 1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task6Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task7"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Math Set 2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task7Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task8"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Abstract Art Submission"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task8Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/task9"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Watch History Crash Course"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/task9Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/task10"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="Test Corrections"
                android:textSize="20sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/task10Time"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/add_task_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:onClick="toCreateNewTask"
        android:text="Add a task" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/select_task_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:onClick="toTimer"
        android:text="Select a task to time" />


</LinearLayout>
